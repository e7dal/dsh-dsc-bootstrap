<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %msg %n</pattern>
        </encoder>
    </appender>

    <!--
    -->

    <logger name="com.klarrio" level="info" />

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>